<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blogspot.virtualn0t3b00k.advancedcalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartPage"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ComplexCalculator"
            android:label="@string/title_activity_complex_calculator"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EquationCalculator"
            android:label="@string/title_activity_equation_calculator"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NumberSystemCalculation"
            android:label="@string/title_activity_number_system_calculation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NumberSystemConversion"
            android:label="@string/title_activity_number_system_conversion"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TableCalculator"
            android:label="@string/title_activity_table_calculator"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UnitConversion"
            android:label="@string/title_activity_unit_conversion"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScientificCalculator"
            android:label="@string/title_activity_scientific_calculator"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NormalCalculator"
            android:label="@string/title_activity_normal_calculator"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>