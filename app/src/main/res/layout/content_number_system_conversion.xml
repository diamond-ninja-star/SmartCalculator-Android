<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.blogspot.virtualn0t3b00k.advancedcalculator.NumberSystemConversion"
    tools:showIn="@layout/app_bar_number_system_conversion"
    android:background="#000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input :"
        android:id="@+id/textView_inputLabel"
        android:textColor="#00ff00"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_input"
        android:layout_below="@+id/textView_inputLabel"
        android:background="#0000ff"
        android:textStyle="bold"
        android:hint="Input"
        android:textColor="#00ff00" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Output :"
        android:id="@+id/textView_outputLabel"
        android:layout_below="@+id/textView_input"
        android:textColor="#00ff00"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_output"
        android:layout_below="@+id/textView_outputLabel"
        android:background="#0000ff"
        android:textStyle="bold"
        android:hint="Output"
        android:textColor="#00ff00" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From :"
        android:id="@+id/textView_from"
        android:layout_below="@+id/textView_output"
        android:textColor="#00ff00"
        android:textStyle="bold" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_from"
        android:background="#00fffb"
        android:layout_below="@+id/textView_from"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To :"
        android:id="@+id/textView_to"
        android:layout_below="@+id/spinner_from"
        android:textStyle="bold"
        android:textColor="#00ff00" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_to"
        android:background="#00fffb"
        android:layout_below="@+id/textView_to"
        android:layout_marginBottom="55dp"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="CONVERT"
        android:id="@+id/button_convert"
        android:layout_below="@+id/spinner_to"
        android:clickable="true"
        android:textStyle="bold"
        android:background="#ff0000"
        android:layout_toRightOf="@+id/button_answer"
        />
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="ANSWER"
        android:id="@+id/button_answer"
        android:layout_below="@+id/spinner_to"
        android:background="#ffff00"
        android:textStyle="bold" />



    <Button

        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/button_nine"
        android:layout_below="@+id/button_answer"
        android:clickable="true"
        android:textStyle="bold"
        android:background="#00ff51"/>
    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="A"
        android:id="@+id/button_a"
        android:layout_below="@+id/button_answer"
        android:layout_toRightOf="@+id/button_nine"
        android:clickable="true"
        android:textStyle="bold"
        android:background="#00ff51"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="B"
        android:id="@+id/button_b"
        android:layout_below="@+id/button_answer"
        android:layout_toRightOf="@+id/button_a"
        android:clickable="true"
        android:textStyle="bold"
        android:background="#00ff51"/>
    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/button_c"
        android:layout_below="@+id/button_answer"
        android:layout_toRightOf="@+id/button_b"
        android:clickable="true"
        android:textStyle="bold"
        android:background="#00ff51"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="D"
        android:id="@+id/button_d"
        android:layout_below="@+id/button_answer"
        android:layout_toRightOf="@+id/button_c"
        android:clickable="true"
        android:textStyle="bold"
        android:background="#00ff51"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="E"
        android:id="@+id/button_e"
        android:layout_below="@+id/button_answer"
        android:layout_toRightOf="@+id/button_d"
        android:clickable="true"
        android:textStyle="bold"
        android:background="#00ff51"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="F"
        android:id="@+id/button_f"
        android:layout_below="@+id/button_answer"
        android:layout_toRightOf="@+id/button_e"
        android:clickable="true"
        android:textStyle="bold"
        android:background="#00ff51"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button_two"
        android:layout_below="@+id/button_nine"
        android:clickable="true"
        android:textStyle="bold"
        android:background="#00ff51"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button_three"
        android:layout_below="@+id/button_nine"
        android:layout_toRightOf="@+id/button_two"
        android:clickable="true"
        android:textStyle="bold"
        android:background="#00ff51"/>
    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/button_four"
        android:layout_below="@+id/button_nine"
        android:layout_toRightOf="@+id/button_three"
        android:clickable="true"
        android:textStyle="bold"
        android:background="#00ff51"/>
    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button_five"
        android:layout_below="@+id/button_nine"
        android:layout_toRightOf="@+id/button_four"
        android:clickable="true"
        android:textStyle="bold"
        android:background="#00ff51"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button_six"
        android:layout_below="@+id/button_nine"
        android:layout_toRightOf="@+id/button_five"
        android:clickable="true"
        android:textStyle="bold"
        android:background="#00ff51"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/button_seven"
        android:layout_below="@+id/button_nine"
        android:layout_toRightOf="@+id/button_six"
        android:clickable="true"
        android:textStyle="bold"
        android:background="#00ff51"/>
    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button_eight"
        android:layout_below="@+id/button_nine"
        android:layout_toRightOf="@+id/button_seven"
        android:clickable="true"
        android:textStyle="bold"
        android:background="#00ff51"/>
    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/button_zero"
        android:layout_below="@+id/button_two"
        android:clickable="true"
        android:textStyle="bold"
        android:background="#00ff51"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/button_one"
        android:layout_below="@+id/button_two"
        android:layout_toRightOf="@+id/button_zero"
        android:clickable="true"
        android:textStyle="bold"
        android:background="#00ff51"/>



    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:id="@+id/button_clear"
        android:clickable="true"
        android:textStyle="bold"
        android:background="#ffff00"
        android:layout_below="@+id/button_two"
        android:layout_toRightOf="@+id/button_one"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="BACKSPACE"
        android:id="@+id/button_backspace"
        android:clickable="true"
        android:textStyle="bold"
        android:background="#ffff00"
        android:layout_below="@+id/button_two"
        android:layout_toRightOf="@+id/button_clear"/>
                </RelativeLayout>
    </ScrollView>

</RelativeLayout>
