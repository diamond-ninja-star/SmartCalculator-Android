<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.blogspot.virtualn0t3b00k.advancedcalculator.NumberSystemCalculation"
    tools:showIn="@layout/app_bar_number_system_calculation"
    android:background="#000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Input : "
        android:id="@+id/textView_first_input"
        android:textStyle="bold"
        android:textColor="#00ff00"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_first_input"
        android:layout_below="@+id/textView_first_input"
        android:hint="First Input"
        android:textStyle="bold"
        android:textColor="#00ff00"
        android:background="#0000ff"
        android:editable="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Second Input :"
        android:id="@+id/textView_second_input"
        android:layout_below="@+id/editText_first_input"
        android:textStyle="bold"
        android:textColor="#00ff00"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_second_input"
        android:layout_below="@+id/textView_second_input"
        android:hint="Second Input"
        android:textStyle="bold"
        android:textColor="#00ff00"
        android:background="#0000ff"
        android:editable="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Number System :"
        android:id="@+id/textView_output"
        android:layout_below="@+id/editText_second_input"
        android:textStyle="bold"
        android:textColor="#00ff00"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_ns_type"
        android:layout_below="@+id/textView_output"
        android:background="#00ffff"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result :"
        android:id="@+id/textView_result"
        android:layout_below="@+id/spinner_ns_type"
        android:textStyle="bold"
        android:textColor="#00ff00"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_outputResult"
        android:layout_below="@+id/textView_result"
        android:hint="Output"
        android:textStyle="bold"
        android:textColor="#00ff00"
        android:background="#0000ff"
        />

    <Button
        android:layout_marginTop="100dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="MULTIPLY"
        android:id="@+id/button_multiply"
        android:textStyle="bold"
        android:background="#ffff00"
        android:layout_below="@+id/textView_result" />
    <Button
        android:layout_marginTop="100dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="DIVIDE"
        android:id="@+id/button_divide"
        android:textStyle="bold"
        android:background="#00ff00"
        android:layout_below="@+id/textView_result"
        android:layout_toRightOf="@+id/button_multiply"/>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/button_add"
        android:textStyle="bold"
        android:background="#00ff00"
        android:layout_below="@+id/button_multiply" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="SUBTRACT"
        android:id="@+id/button_subtract"
        android:textStyle="bold"
        android:background="#ffff00"
        android:layout_below="@+id/button_multiply"
        android:layout_toRightOf="@+id/button_add"/>


    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:id="@+id/button_clear"
        android:textStyle="bold"
        android:background="#ffff00"
        android:layout_below="@+id/button_add"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="ANSWER"
        android:id="@+id/button_answer"
        android:background="#00ff00"
        android:layout_below="@+id/button_add"
        android:layout_toRightOf="@+id/button_clear"/>
                </RelativeLayout>
    </ScrollView>

</RelativeLayout>
