<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.blogspot.virtualn0t3b00k.advancedcalculator.ComplexCalculator"
    tools:showIn="@layout/app_bar_complex_calculator">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="FIRST INPUT :"
        android:id="@+id/textView_input1Label"


        android:textStyle="bold"
        android:textColor="#00ff00" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_input1"
        android:layout_below="@+id/textView_input1Label"

        android:background="#00ffff"
        android:editable="true"
        android:hint="ENTER YOUR FIRST INPUT"
        android:textStyle="bold"
        android:gravity="start"
        android:textColor="#000000" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="SECOND INPUT :"
            android:id="@+id/textView_input2Label"
            android:textStyle="bold"
            android:textColor="#00ff00"


            android:layout_below="@+id/editText_input1" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_input2"
        android:layout_below="@+id/textView_input2Label"

        android:background="#00ffff"
        android:editable="true"
        android:hint="ENTER YOUR SECOND INPUT"
        android:textStyle="bold"
        android:gravity="start"
        android:textColor="#000000" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="CHOOSE YOUR OPERATION :"
            android:id="@+id/textView_operationLabel"
            android:textStyle="bold"
            android:textColor="#00ff00"


            android:layout_below="@+id/editText_input2" />

    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_operation"
            android:background="#00b2ff"
            android:clickable="true"
            android:layout_below="@+id/textView_operationLabel" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECT"
        android:id="@+id/button_select"
        android:background="#fffb00"
        android:clickable="true"
        android:textStyle="bold"
        android:layout_below="@+id/spinner_operation"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="OUTPUT :"
            android:id="@+id/textView_outputLabel"
            android:textColor="#00ff00"
            android:textStyle="bold"


            android:layout_below="@+id/button_select"
            android:gravity="start" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/textView_output"
            android:background="#00ffff"
            android:textStyle="bold"
            android:layout_below="@+id/textView_outputLabel"


            android:textColor="#000000"
            android:gravity="end" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
