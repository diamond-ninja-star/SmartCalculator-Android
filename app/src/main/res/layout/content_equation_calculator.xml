    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:text="ENTER EQUATION TYPE :"
        android:id="@+id/textView_equationTypeLabel"
        
        
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#00ff00" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_type"
        android:layout_below="@+id/textView_equationTypeLabel"
        
        android:background="#fbff00" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_quantity"
        android:background="#fbff00"
        android:layout_below="@+id/spinner_type" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="ENTER YOUR EQUATION :"
        android:id="@+id/textView_enterYourEquationLabel"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#00ff00"
        android:layout_below="@+id/spinner_quantity" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/textView_enterYourEquationLabel"
        android:id="@+id/linearLayout_equation1">

        <EditText
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_a1"

            android:background="#fbff00" />

        <TextView
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"

            android:id="@+id/textView_x1"
            android:background="#95ff00" />

        <EditText
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_b1"

            android:background="#fbff00" />

        <TextView
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"

            android:id="@+id/textView_y1"

            android:background="#95ff00" />

        <EditText
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_c1"

            android:background="#fbff00" />

        <TextView
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"

            android:id="@+id/textView_z1"

            android:background="#95ff00" />

        <EditText
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_d1"

            android:background="#fbff00" />

        <TextView
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"

            android:id="@+id/textView_w1"

            android:background="#95ff00" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout_equation1"
        android:layout_marginBottom="5dp"
        android:id="@+id/linearLayout_equation2">

        <EditText
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_a2"

            android:background="#fbff00" />

        <TextView
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"

            android:id="@+id/textView_x2"

            android:background="#95ff00" />

        <EditText
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_b2"


            android:background="#fbff00" />

        <TextView
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"

            android:id="@+id/textView_y2"


            android:background="#95ff00" />

        <EditText
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_c2"

            android:background="#fbff00" />

        <TextView
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"

            android:id="@+id/textView_z2"

            android:background="#95ff00" />

        <EditText
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_d2"


            android:background="#fbff00" />

        <TextView
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"

            android:id="@+id/textView_w2"

            android:background="#95ff00" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout_equation3"
        android:layout_below="@+id/linearLayout_equation2"
        android:layout_marginBottom="5dp">

        <EditText
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_a3"

            android:background="#fbff00" />

        <TextView
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"

            android:id="@+id/textView_x3"

            android:background="#95ff00" />

        <EditText
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_b3"

            android:background="#fbff00" />

        <TextView
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"

            android:id="@+id/textView_y3"

            android:background="#95ff00" />

        <EditText
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_c3"

            android:background="#fbff00" />

        <TextView
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"

            android:id="@+id/textView_z3"

            android:background="#95ff00" />

        <EditText
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_d3"

            android:background="#fbff00" />

        <TextView
            android:layout_width="43.75dp"
            android:layout_height="wrap_content"

            android:id="@+id/textView_w3"

            android:background="#95ff00" />

    </LinearLayout>


    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:id="@+id/button_clear"
        android:layout_below="@+id/linearLayout_equation3"
        android:background="#f7ff00"
        android:textStyle="bold" />
    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="CALCULATE"
        android:id="@+id/button_calculate"
        android:background="#00ff00"
        android:clickable="true"
        android:textStyle="bold"
        android:layout_below="@+id/linearLayout_equation3"
        android:layout_toRightOf="@id/button_clear"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:text="OUTPUT :"
        android:id="@+id/textView_outputLabel"
        android:layout_below="@+id/button_calculate"
        
        android:textStyle="bold"
        android:textColor="#00ff00" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView_output"
        android:layout_below="@+id/textView_outputLabel"
        
        android:background="#00ffee" />
                <!--
                </RelativeLayout>
    </ScrollView>
    -->
</RelativeLayout>
